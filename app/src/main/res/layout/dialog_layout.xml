<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:textSize="16dp"
                android:id="@+id/tv_title"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="温馨提示111111"
                android:textColor="@color/tab_selected_color"/>

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_close"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_top"
            style="@style/horizontal_line"/>

        <TextView
            android:textSize="14dp"
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好"/>
        <ImageView
            android:id="@+id/iv_middle"
            style="@style/horizontal_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_noposition"
                android:textSize="14dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="取消"
                android:background="@drawable/shape_dialogtext_leftbg"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/iv_end"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/hor_line"/>
            <TextView
                android:id="@+id/tv_position"
                android:textSize="14dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="确定"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
